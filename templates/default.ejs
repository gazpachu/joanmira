<!DOCTYPE html>
<html lang="<%= lang %>">
  <head>
    <%- include('head'); %>
  </head>
  <body>
    <%- include('header'); %>
    <div class="main-wrapper page">
      <div class="content">
        <h1><%= frontmatter.title %></h1>
        <% if (frontmatter.cover) { %>
          <picture>
            <source srcset="<%= imagePath.replace('.jpg', '.webp') %>" type="image/webp">
            <source srcset="<%= imagePath %>" type="image/jpeg">
            <img class="image" src="<%= imagePath %>" alt="<%= frontmatter.title %>" width="100%" height="500">
          </picture>
        <% } %>
        <%- content %>
      </div>
    </div>
    <%- include('footer'); %>
  </body>
</html>